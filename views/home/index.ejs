<div class="row-fluid">
  <form method="POST" class="form-horizontal" action="/queue/join">
    <input type='hidden' name='_csrf' value='<%= _csrf %>'>

    <div class="form-group">
      <label for="fitting" class="col-lg-1 control-label"><%= __("Fitting") %></label>
      <div class="col-lg-11">
        <textarea class="form-control" rows="5" name="fitting" id="fitting"
                  data-bind="value: fitting" placeholder="<%= __("Send your fit to any chat channel and copy/paste your message from there to this text area. Result should contain a 'fitting:...' substring in it.") %>"></textarea>
      </div>
    </div>


    <div class="form-group">
      <div class="col-lg-offset-1 col-lg-11">
        <button class="btn btn-block btn-default"
                data-bind="enable: fitting"><%= __("Join") %></button>
      </div>
    </div>
  </form>
</div>

<ul data-bind="foreach: pilots">
  <li data-bind="text: charname"></li>
</ul>
