<div class="row-fluid">

  <form method="POST" role="form" action="/queue/join">

    <input type='hidden' name='_csrf' value='<%= _csrf %>'>

    <div class="form-group">
      <label for="fitting" class="control-label"><%= __("Fitting") %></label>
      <textarea class="form-control" rows="3" name="fitting" id="fitting"
                data-bind="value: fitting" placeholder="<%=
__('Send your fit to any chat channel and copy/paste your message from there to this text area. Result should contain a «fitting:...» substring in it.')
                %>"></textarea>
    </div>

    <div class="form-group">
        <button class="btn btn-block btn-default"
                data-bind="enable: fitting"><%= __("Join") %></button>
    </div>

  </form>

</div>

<div class="row-fluid">
  <h4><%= __('Queue:') %></h4>
  <ul class="list-group" data-bind="foreach: sortedPilots">
    <li class="list-group-item">
      <button class="btn btn-xs btn-default"><span class="glyphicon glyphicon-plus"></span></button>
      <button class="btn btn-xs btn-default"><span class="glyphicon glyphicon-ok"></span></button>
      <button class="btn btn-xs btn-default"><span class="glyphicon glyphicon-remove"></span></button>
      <span data-bind="text: charname"></span> -
      <span data-bind="solarsystem: $data"></span> -
      <span data-bind="fitting: $data"></span> -
      <span data-bind="text: createdAt().format('HH:MM')"></span>
      (<span data-bind="text: fromNow"></span>)
    </li>
  </ul>
</div>
